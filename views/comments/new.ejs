<% include ../partials/header %>


<div class="container">
    <h1  style="margin: 30px auto; text-align: center">Add new comments to <%=  collection.name%></h1>
    <div class="row">
        <div style="width:30%; margin: 0px auto;">
            <form action="/collections/<%= collection._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[name]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                <div style="text-align:center" class="form-group">
                    <a href="/collections">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>


<% include ../partials/footer%>
